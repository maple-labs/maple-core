{
  "name": "maple-core",
  "version": "1.0.0",
  "scripts": {
    "docs": "npx solidity-docgen --solc-module solc -i ./contracts -o ./docs -t ./docs",
    "lint": "npx solhint contracts/**/*.sol",
    "download": "node scripts/download.js",
    "console": "npx hardhat console",
    "chain": "hardhat node",
    "deploy": "yarn migrate-token&& hardhat run scripts/deploy.js && hardhat run scripts/publish.js",
    "coverage": "npx hardhat coverage --network coverage",
    "migrate-token": "npx hardhat run scripts/migrate-token.js && npx hardhat run scripts/publish.js",
    "compile": "hardhat compile",
    "setup": "hardhat run scripts/setup.js",
    "test": "hardhat test",
    "token": "npx hardhat run scripts/migrate-token.js"
  },
  "repository": "git+https://github.com/maple-labs/maple-core.git",
  "keywords": [
    "Maple",
    "Core",
    "Solidity"
  ],
  "author": "Maple Labs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/maple-labs/maple-core/issues"
  },
  "homepage": "https://github.com/maple-labs/maple-core#readme",
  "devDependencies": {
    "@maplelabs/hardhat-scripts": "^1.2.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "bignumber.js": "^9.0.1",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.1.1",
    "ethers": "^5.0.18",
    "hardhat": "^2.0.0",
    "node-watch": "^0.7.0",
    "prettier": "^2.1.2",
    "solc": "0.6.11",
    "solhint": "^3.3.1",
    "solidity-coverage": "^0.7.12"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.7.2"
  }
}
